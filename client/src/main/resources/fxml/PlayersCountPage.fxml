<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="views.controllers.PlayersCountPageController"
            prefHeight="720" prefWidth="1280" styleClass="enteringMenus" fx:id="pane">

    <center>
        <VBox spacing="30" alignment="CENTER" fx:id="box">
            <Text text = "Choose how many opponents are starting the game with you:" styleClass="upperPageText"/>
            <Button fx:id="firstButton" text="1" styleClass="menu-button" prefHeight="50" prefWidth="200" onMouseClicked="#setOpponents"/>
            <Button fx:id="secondButton" text="2" styleClass="menu-button" prefHeight="50" prefWidth="200" onMouseClicked="#setOpponents"/>
            <Button fx:id="thirdButton" text="3" styleClass="menu-button" prefHeight="50" prefWidth="200" onMouseClicked="#setOpponents"/>
            <Button fx:id="fourthButton" text="4" styleClass="menu-button" prefHeight="50" prefWidth="200" onMouseClicked="#setOpponents"/>
            <Button text="Back" styleClass="menu-button" prefHeight="50" prefWidth="200" onMouseClicked="#back"/>
        </VBox>
    </center>

    <stylesheets>
        <URL value="@../css/MenusStyle.css"/>
    </stylesheets>
</BorderPane>
