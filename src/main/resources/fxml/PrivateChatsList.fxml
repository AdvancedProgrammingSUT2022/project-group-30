<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="views.controllers.PrivateChatsListController"
      prefHeight="400.0" prefWidth="600.0" spacing="20" alignment="TOP_CENTER">

    <padding>
        <Insets topRightBottomLeft="50"/>
    </padding>

    <HBox alignment="CENTER" spacing="20">
        <Label text="Contact:" styleClass="timesNewRoman20"/>
        <TextField styleClass="timesNewRoman20" prefWidth="200"/>
    </HBox>
    <Button text="Chat!" prefWidth="300" styleClass="greenButton" onAction="#onChatButtonClick"/>

    <stylesheets>
        <URL value="@../css/chatroom.css"/>
    </stylesheets>
</VBox>
